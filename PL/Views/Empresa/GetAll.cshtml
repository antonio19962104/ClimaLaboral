                url: '@Url.Action("Update", "Empresa")',
                contentType: 'application/json; charset=utf-8',
                complete: function (Response) {

                    if (Response.responseJSON == "success") {
                        swal({
                            title: "La empresa se actualizó correctamente",
                            text: "",
                            type: "success",
                            icon: "success",
