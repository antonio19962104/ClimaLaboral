        }
    }

    function DeleteCompany(IdCompany) {

        let ModelCompany = {
            companyId: IdCompany
        };

        var data = JSON.stringify(ModelCompany);

        $.ajax({

            type: 'POST',
            data: data, traditional: true,
            url: '@Url.Action("DeleteEmpresa", "Empresa")',
            contentType: 'application/json; charset=utf-8',
            complete: function (Response) {

