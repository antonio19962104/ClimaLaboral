<div class="content-wrap">
    <div id="tab-peores-ee" class="container-fluid px-lg-5">
        <h2 class="robotothin mb-2 mt-n1">LOS 5 MÁS BAJOS ENFOQUE EMPRESA <span class="robotobold yellow-clima area-empresa ml-3">{{vm.UNSeleccionada}}</span></h2>
        <div class="card mb-4 mb-md-0 pr-3 pl-3">
            <div class="card-block mt-3 mb-3">
                <div class="row mb-5 mt-img-indicadores">
                    <div class="col-xl" ng-repeat="item in vm.PeoresReactivosEE track by $index">
                        <div class="border-mejores">
                            <div class="bg-degradado-gris">
                                <center><img @*src="~/img/ReporteoClima/peores.png"*@ ng-src="{{ vm.setIconoMejoresPeores(item.Porcentaje) }}" class="img-fluid"></center>
                            </div>
                            <center>
                                <div class="mejores-peores">
                                    <p class="black-clima mb-5 mt-2 parrafo-pregunta">{{ item.Pregunta }}</p>
                                </div>
                                <div class="contenido-peores pt-0">
                                    <i class="fa fa-caret-down text-white icono-mejores-down"></i>
                                    <h3 class="text-white robotobold">{{ item.Porcentaje }}%</h3>
                                    <center ng-hide="!vm.hasHistorico"><p class="{{ vm.getDiffHistoricoEE(item.IdPregunta, item.Porcentaje) >= 0 ? 'porcentaje-mejores' : 'porcentaje-peores' }}">{{ vm.getDiffHistoricoEE(item.IdPregunta, item.Porcentaje) }}%</p></center>
                                </div>
                            </center>
                        </div>
                    </div>
                    
                </div>
                <div class="d-flex justify-content-center mt-5 mt-img-indicadores">
                    <div class="col-12 p-0 m-0">
                        <img src="/img/ReporteoClima/indicadores.png" class="m-0 p-0" style="width:inherit;">
                    </div>
                </div>
            </div><!--.card-block-->
        </div><!--.card-->
        <hr class="clearfix my-5">

    </div><!--.container-->

</div><!--.content-wrap-->