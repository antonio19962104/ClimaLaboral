
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Documentación - Encuestas</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div ng-app="app" ng-controller="documentacionController as vm" class="container mt-3">
        <div class="parent">
            <div class="header-docs">
                <p>Namespace: {{ vm.docBL.Assembly.Name }}</p>
                <p>Assembly: {{ vm.docBL.Assembly.Name }}.dll</p>
                <p>Syntax: </p>
                <div class="mt-2">
                    C#
                    public class {{ vm.docBL.Class }}
                </div>
                This {{ vm.docBL.Class }} class exposes the following members
            </div>
            <div class="child-1">
                Methods:
                <div class="child-2 mt-2 ml-3" ng-repeat="item in vm.docBL.Members.Member">
                    <div style="padding: 5px;" hidden>
                        <p>Name: {{ item.Name }}</p>
                        <p>Descriptión: {{ item.Summary }}</p>
                        <p>Returns: {{ item.Returns }}</p>
                        <div class="params ml-5" ng-repeat="elem in item.Param">
                            <span>Parammetro: {{ elem.Name }}</span>
                        </div>
                    </div>
                    <div class="mt-2">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in vm.docBL.Members.Member">
                                    <td><img src="" /></td>
                                    <td>{{ item.Name }}</td>
                                    <td>{{ item.Summary }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <table hidden class="table table-hover">
            <thead>
                <tr>
                    <th>Proyecto: {{ vm.docBL.Assembly.Name }}</th>
                </tr>
                <tr>
                    <th>Miembros</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in vm.docBL.Members.Member">
                    <th>
                        Nombre: {{ item.Name }}
                    </th>
                </tr>
                <tr ng-repeat="item in vm.docBL.Members.Member">
                    <th>
                        Sumary: {{ item.Summary }}
                    </th>
                </tr>
                <tr ng-repeat="item in vm.docBL.Members.Member">
                    <th>
                        Returns: {{ item.Returns }}
                    </th>
                </tr>
            </tbody>
        </table>
    </div>
    <script src="~/scripts/Clima Dinamico/jquery.min.js"></script>
    <script src="~/scripts/AngularJS.js"></script>
    <script src="~/scripts/documentacion.js"></script>
    <style>
        .header-docs{
            height: auto;
            /*background-color: #808080;*/
            font-weight: bold;
        }
        .child-2{
            
        }
    </style>
</body>
</html>
