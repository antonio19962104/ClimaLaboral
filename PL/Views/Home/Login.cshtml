@model ML.Usuario
@{
    ViewBag.Title = "Login";
}

<div class="container" style="padding-top:30px;">

    <div class="row">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <div class="col-md-4 col-md-offset-4">

                <div class="login-panel panel panel-default">

                    <div class="panel-heading">

                        <h3 class="panel-title">Ingrese sus datos</h3>

                    </div>

                    <div class="panel-body">

                        <fieldset>

                            <div class="form-group">
                                @*<input class="form-control" placeholder="Usuario" name="usuario" type="text" autofocus id="txtUsuario">*@
                                @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "form-control", @placeholder = "Usuario", @name = "usuario", @type = "text" })
                            </div>
                            <div class="form-group">
                                @*<input class="form-control" placeholder="Usuario" name="usuario" type="text" autofocus id="txtUsuario">*@
                                @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Password", @name = "Password", @type = "Password" })
                            </div>


                            <button id="btnIngresar" class="btn btn-lg btn-success btn-block">Ingresar</button>

                        </fieldset>

                    </div>

                </div>

            </div>
        }
    </div>

</div>

