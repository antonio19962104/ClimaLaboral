@model DL.Rango

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Admin/Contenido.cshtml";
}

@section H1{
    <section id="page-title">
        <div class="container-fluid px-lg-5">
            <div class="row">
                <div class="col-12 bottom-align-left center-vertically-xs">
                    <img src="../../img/icon-survey.png" )" class="img-fluid">
                    <h1 class="title-page-survey">
                        Rangos / <span>Detalle</span>
                    </h1>
                </div>

            </div>
        </div><!--.container-fluid-->
    </section>
}
<div class="content-wrap">
    <div class="container-fluid px-lg-5">
        <div class="row">
            <div class="col-lg-8  offset-lg-2">

                <h4>Detalle del Rango</h4>
                @*<hr />*@
                <table class="table">
                    <tr class="">
                        <td class="col-2">
                            ID
                        </td>
                        <td class="col-4">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </td>
                        <td class="col-3">
                            @Html.DisplayNameFor(model => model.Desde)
                        </td>
                        <td class="col-3">
                            @Html.DisplayNameFor(model => model.Hasta)
                        </td>
                    </tr>
                    <tr class="">
                        <td class="col-2">
                            @Html.DisplayFor(model => model.IdRango)
                        </td>
                        <td class="col-4">
                            @Html.DisplayFor(model => model.Descripcion)
                        </td>
                        <td class="col-3">
                            @Html.DisplayFor(model => model.Desde)
                        </td>
                        <td class="col-3">
                            @Html.DisplayFor(model => model.Hasta)
                        </td>
                    </tr>
                </table>
                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>
                <p>
                    @Html.ActionLink("Editar", "Edit", new { id = Model.IdRango }) |
                    @Html.ActionLink("Regresar", "Index")
                </p>
            </div>
        </div>
    </div>
</div>