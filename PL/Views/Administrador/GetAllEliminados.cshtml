@section H1
    {
<section id="page-title">
    <div class="container-fluid px-lg-5">
        <div class="row">
            <div class="col-sm-6 bottom-align-left center-vertically-xs">
                <img class="img-fluid img-page-title" src="~/img/icon-users.png"> <h1 class="title-page-survey">Usuarios eliminados / <span>Listado</span></h1>
            </div>
        </div>
    </div><!--.container-fluid-->
</section>
    }

@*<section id="content">*@
    <div class="content-wrap">
        <div class="container-fluid px-lg-5">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">

                        <table id="tableAdmin" class="table table-hover table-responsive">
                            <caption>Lista de usuarios eliminados</caption>
                            <thead>
                                <tr>
                                    <th class="text-center" scope="col">
                                        <strong>Nombre</strong>
                                    </th>
                                    <th class="text-center" scope="col">
                                        <strong>Perfil</strong>
                                    </th>
                                    <th class="text-center" scope="col">
                                        <strong>Estatus</strong>
                                    </th>
                                    <th class="text-center" scope="col">
                                        Restaurar
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ML.Administrador admin in Model.Objects)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @admin.Empleado.Nombre @admin.Empleado.ApellidoPaterno @admin.Empleado.ApellidoMaterno
                                        </td>
                                        <td class="text-center">
                                            @admin.PerfilD4U.Descripcion
                                        </td>
                                        <td class="text-center">
                                            @admin.TipoEstatus.Descripcion
                                        </td>
                                        <td class="text-center">
                                                <a href="@Url.Action("Restaurar", "Administrador", new { IdAdministrador = admin.IdAdministrador } )">
                                                    <button title="Cambia el estatus del administrador a Activo" type="button" class="btn btn-secondary btn-action estatus"><i class="fas fa-trash-restore"></i> Restaurar usuario</button>
                                                </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
@*</section>*@

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js" defer></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js" defer></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js" defer></script>

<script src="~/scripts/jquery-1.8.3.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tableAdmin').DataTable();
    });
</script>