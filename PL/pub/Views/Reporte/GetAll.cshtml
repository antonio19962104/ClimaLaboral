@model ML.Result
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Admin/Contenido.cshtml";
}

@section H1
{
    <section id="page-title">
        <div class="container-fluid px-lg-5">
            <div class="row">
                <div class="col-sm-6 bottom-align-left center-vertically-xs">
                    <img class="img-fluid img-page-title" src="~/img/icon-reports.png"> <h1 class="title-page-survey">Reportes / <span>Listado</span></h1>
                </div>
            </div>
        </div><!--.container-fluid-->
    </section>
}

@*<section id="content">*@
    <div class="content-wrap" id="">
        <div class="container-fluid px-lg-5">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                        <table id="myTable" class="table table-hover table-responsive-sm">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-center">
                                        <strong>Encuesta</strong>
                                    </th>
                                    <th scope="col" class="text-center">
                                        <strong>Acciones</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var cssbtn = "btn-primary";
                                   
                                }
                                @foreach (ML.Encuesta item in Model.Objects)
                                {
                                    if (item.ListReportes == null)
                                    {
                                        <tr>
                                            <td>No existen reportes disponibles para tu usuario</td>
                                        </tr>
                                    }
                                    else
                                    {
                                    <tr>
                                        <td class="text-center">
                                            @item.Nombre
                                        </td>
                                        <td>
                                            @if (item.ListReportes == null)
                                            {
                                                @Html.Raw("<a href='/ReporteD4U/Add/' target='_top' class='btn btn-primary mr-3'>Genera reporte</a>");
                                            }
                                            else
                                            {
                                                foreach (ML.EncuestaReporte itemR in item.ListReportes)
                                                {
                                                    if (itemR.ReporteD4U.location.Contains("/Reporte?")) { cssbtn = "btn-primary"; }
                                                    if (itemR.ReporteD4U.location.Contains("/ViewReporte")) { cssbtn = "btn-secondary"; }
                                                    if (itemR.ReporteD4U.location.Contains("/ReporteGlobalCL")) { cssbtn = "btn-primary"; }
                                                    if (itemR.ReporteD4U.location.Contains("/ReporteFinalByUNegocio")) { cssbtn = "btn-secondary"; }
                                                    if (itemR.ReporteD4U.location.Contains("/ReporteAbiertas")) { cssbtn = "btn-success"; }
                                                    if (itemR.ReporteD4U.location.Contains("ReporteComentarios3d/")) { cssbtn = "btn-warning"; }
                                                    if (itemR.ReporteD4U.location.Contains("/reporteoClima/ReporteDinamico/")) { cssbtn = "btn-info"; }
                                                    if (itemR.ReporteD4U.location.Contains("/reporteoClima/Index/")) { cssbtn = "btn-danger"; }
                                                    if (itemR.ReporteD4U.location.Contains("/Add/"))
                                                    {
                                                        cssbtn = "btn-light";
                                                    }
                                                    @Html.Raw("<a href=" + itemR.ReporteD4U.location + " target='_top' data-mdb-toggle='tooltip'  data-mdb-html='true' title='" + itemR.ReporteD4U.Nombre + "' class='btn " + cssbtn + " mr-3'>Ver reporte</a>");
                                                }

                                            }
                                        </td>
                                        @*<td class="text-center">
                                            <button value="@item.IdEncuesta" onclick="GetReports($(this).val())" type="button" class="btn btn-secondary btn-action" data-toggle="modal" data-target="#modalViewReports"><i class="fas fa-list"></i> Ver reportes</button>
                                        </td>*@
                                    </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <section id="Reportes" style="margin-top:20px;"></section>
                    </div>
                </div><!--.col-lg-8-->
            </div><!--.row-->
        </div><!--.container-->
    </div><!--.content-wrap-->
@*</section>*@

<div class="wrapper-editor">
    <div class="row d-flex justify-content-center modalWrapper">

        <!--MODAL AGREGAR AREA-->
        <div class="modal fade addNewInputs" id="modalViewReports" tabindex="-1" role="dialog" aria-labelledby="modalViewReports"
             aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold text-primary ml-5">Selecciona algun reporte para consultarlo</h4>
                        <button type="button" class="close text-primary" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="insertarContenido" class="modal-body mx-3">

                        @*Insert cotent json*@


                    </div>
                    <div class="modal-footer d-flex justify-content-center buttonAddFormWrapper" style="display:none;">
                        <button onclick="AddArea()" class="btn btn-outline-primary btn-block buttonAdd" style="display:none;">
                            Agregar Área
                            <i class="fas fa-plus ml-1"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
